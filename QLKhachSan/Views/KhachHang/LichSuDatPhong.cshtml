@model IEnumerable<QLKhachSan.ViewModels.LSDatPhongVM>
@{
    ViewData["Title"] = "LichSuDatPhong";
    Layout = null;
}

<div class="personal__account-security container">
    <h2 class="text-center mb-4">Lịch sử đặt phòng</h2>
        <div class="table-responsive">
            <table class="table table-striped" style="border-color: black;">
                <thead>
                <tr class="header-row" style="color: black;">
                        <th scope="col">STT</th>
                        <th scope="col">Tên phòng</th>
                        <th scope="col">Tên khách sạn</th>
                        <th scope="col">Tên khách hàng</th>
                        <th scope="col">Số người</th>
                        <th scope="col">Ngày đến</th>
                        <th scope="col">Ngày đi</th>
                        <th scope="col">Ngày thanh toán</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    var count = 1;
                }
                @foreach (var item in Model)
                {
                    <tr style="color: black;">
                        <td>@count</td>
                        <td>@item.tenphong</td>
                        <td>@item.tenks</td>
                        <td>@item.tenkh</td>
                        <td>@item.songuoi</td>
                        <td>@item.ngayden</td>
                        <td>@item.ngaydi</td>
                        <td>@item.ngaythanhtoan</td>
                    </tr>
                    count++;
                }
                </tbody>
            </table>
        </div>
</div>



