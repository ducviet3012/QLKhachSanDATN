@model QLKhachSan.ViewModels.Admin.UserVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "SuaKH";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card-body">
    <div class="basic-form">
        <form method="post" asp-action="SuaKH" enctype="multipart/form-data">
            <div class="text-danger">@TempData["Message"]</div>
            <div class="mb-3">
                <input hidden type="text" class="form-control" name="makh" value="@Model.MaKh" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Họ tên</label>
                <input asp-for="TenKh" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Giới tính </label>
                <select asp-for="GioiTinh" class="default-select form-control wide mb-3">
                    <option value="0">Nam</option>
                    <option value="1">Nữ</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">CCCD</label>
                <input asp-for="CCCD" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                <input asp-for="DiaChi" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Ngày sinh</label>
                <input asp-for="NgaySinh" type="date" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <input asp-for="Sdt" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Hiệu lực </label>
                <select asp-for="HieuLuc" class="default-select form-control wide mb-3">
                    <option value="0">Đang hoạt động</option>
                    <option value="1">Đã bị khóa</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Save</button>
        </form>
    </div>
</div>

